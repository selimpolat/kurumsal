@model KurumsalWebSitesi.Models.SendCodeViewModel
@{
    ViewBag.Title = "Gönder";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Kodu Gönder", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {
    @Html.AntiForgeryToken()
    @Html.Hidden("rememberMe", @Model.RememberMe)
    <h4>Doğrulama Kodu Gönder</h4>
    <hr />
    <div class="row">
        <div class="col-md-8">
            İki Faktörlü Kimlik Doğrulama Sağlayıcısı'nı seçin:
            @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
            <input type="submit" value="Submit" class="btn btn-default" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
